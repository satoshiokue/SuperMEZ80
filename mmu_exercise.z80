	ORG	0		;mem base of boot
;
;	I/O ports
;
CONDAT	EQU	1		;console data port
DRIVE   EQU	10		;fdc-port: # of drive
TRACK   EQU	11		;fdc-port: # of track
SECTOR  EQU	12		;fdc-port: # of sector
FDCOP   EQU	13		;fdc-port: command
FDCST   EQU	14		;fdc-port: status
DMAL    EQU	15		;dma-port: dma address low
DMAH    EQU	16		;dma-port: dma address high
MMUINIT	EQU	20		;MMU INIT
BNKSEL	EQU	21		;MMU bank select
;
BOOT:
	JP	COLD
        DEFS	128 - $, 0
;
HLOMSG:	DEFM	'Hello, bank memory!'
	DEFB	13,10,0
;
COLD:
	LD	HL,HLOMSG
PRTMSG0:
	LD	A,(HL)
	OUT	(CONDAT),A
	INC	HL
	OR	A
	JP	NZ,PRTMSG0

	LD	A,8
	OUT	(MMUINIT),A

	LD	C,TESTEND - TESTSTART
        LD	HL,TESTSTART
        LD	DE,0C000H

COPYLOOP:
        LD	A,(HL)
        LD	(DE),A
        INC	HL
        INC	DE
        DEC	C
        JR	NZ,COPYLOOP
        JP	0C000H

TESTSTART:
        LD	HL,0100H
	LD	C,9
	LD	B,0
TESTLOOP:
	LD	A,B
	OUT	(BNKSEL),A
        LD	(HL),A
        INC	HL
	LD	A,'#'
        LD	(HL),A
        INC	B
        DEC	C
        JR	NZ,TESTLOOP
INFLOOP:
	NOP
	JR	INFLOOP
TESTEND:
;
	END
